#!/usr/bin/env nix-shell
#!nix-shell -i bash
#!nix-shell -p nix
#!nix-shell --pure
#!nix-shell --keep SSL_CERT_FILE
#!nix-shell --keep NIX_SSL_CERT_FILE


set -euo pipefail

export NIX_PATH="nixpkgs=./nix"

echo "Building"

# Build and create a root
nix-build --sandbox --no-link --max-jobs 10

echo "all good"
